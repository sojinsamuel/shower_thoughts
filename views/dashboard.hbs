<h1>dashboard test</h1>
<h3>Welcome {{name}}</h3>
<h4>Here are your thoughts</h4>

{{#if thoughts}}
  <table class="striped">
    <thead>
      <tr>
        <th>Title</th>
        <th>Date</th>
        <th>Status</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      {{#each thoughts}}
        <tr>
          <td><a href="/thougts/{{_id}}">{{title}}</a></td>
          <td>{{formatDate createdAt "MMMM Do YYYY, h:mm:ss a"}}</td>
          <td><span class="dash-status">{{status}}</span></td>
          <td>
            <a href="thoughts/edit/{{_id}}" class="btn btn-float"><i class="fas fa-edit"></i></a>

            <form action="/thoughts/{{_id}}" method="POST" id="delete-form">
              <input type="hidden" name="_method" value="DELETE">
              <button class="btn red" type="submit"><i class="fas fa-trash"></i></button>
            </form>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
{{else}}
<p>You have not created any shower thoughts yet.</p>
{{/if}}